{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "vite.main.config.ts",
    "vite.renderer.config.ts",
    "vite.preload.config.ts",
    "forge.config.ts"
  ]
}
